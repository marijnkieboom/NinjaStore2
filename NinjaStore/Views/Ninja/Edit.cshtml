@using (Html.BeginForm("SellAll", "Ninja", FormMethod.Post))
{
    <input type="hidden" name="ninjaId" value="@Model.CurrentNinja.NinjaId" />
    <input type="submit" value="alles verkopen" />
}
<h1>Shop</h1>
@using (Html.BeginForm("Edit", "Ninja", FormMethod.Get))
{
    <input type="hidden" value="@Model.CurrentNinja.NinjaId" name="id">
    <select name="category" asp-items="Html.GetEnumSelectList<NinjaStore.Data.Models.Category>()" style="margin-bottom: 10px">
        <option selected="selected">Selecteren</option>
    </select>
    <input type="submit" value="filteren"/>
}
@{foreach (var item in Model.BuyAbleEquipment)
    {

        <div class="itemInShop">
            <p>@item.Name</p>
            <p>@item.Value goud</p>
            <ul>
                <li>Agility: @item.Agility</li>
                <li>Strength: @item.Strength</li>
                <li>Intelligence: @item.Intelligence</li>
            </ul>
            @using (Html.BeginForm("BuyItem", "Ninja", FormMethod.Post))
            {
