@model NinjaStore.Web.Models.ShopViewModel;

@{
    ViewData["Title"] = "Ninja winkel";
}


<h1>@Model.CurrentNinja.Name </h1>
<h2>Goud: @Model.CurrentNinja.Gold</h2>
<h2>Waarde inventory: @Model.Worth</h2>
<ul>
    <li>Agility: @Model.Agility</li>
    <li>Strength: @Model.Strength</li>
    <li>Intelligence: @Model.Intelligence</li>
</ul>

<hr />

@{
    if (TempData["Error"] != null)
    {
        <p class="error">@TempData["Error"].ToString()</p>
    }
}

<div class="row">
    <div class="column">
        <div class="equipment">
            @if (Model.Head != null)
            {
                var item = Model.Head;
                <h3>@item.Category: @item.Name</h3>
                <ul>
                    <li>Agility: @item.Agility</li>
                    <li>Strength: @item.Strength</li>
                    <li>Intelligence: @item.Intelligence</li>
                </ul>
                @using (Html.BeginForm("SellItem", "Ninja", FormMethod.Post))
                {
                    <input type="hidden" name="itemId" value="@item.EquipmentId" />
                    <input type="hidden" name="ninjaId" value="@Model.CurrentNinja.NinjaId" />
                    <input type="submit" value="verkopen" />
                }
            }
            else
            {
                <h2>Head</h2>
                <p>Geen item in deze catogory</p>
            }
        </div>
