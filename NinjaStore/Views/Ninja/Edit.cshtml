</div>
<h1>Shop</h1>
@{ foreach (var item in ViewBag.BuyAbleEquipment)
    {
        <div class="itemInShop">
            <p>@item.Name</p>
            <p>@item.Value goud</p>
            <ul>
                <li>Agility: @item.Agility</li>
                <li>Strength: @item.Strength</li>
                <li>Intelligence: @item.Intelligence</li>
            </ul>
            @using (Html.BeginForm("BuyItem", "Ninja", FormMethod.Post))
            {
                <input type="hidden" name="itemId" value="@item.EquipmentId" />
                <input type="hidden" name="ninjaId" value="@Model.NinjaId" />
                <input type="submit" value="kopen" class="Shopknop" />
            }
        </div>


    }
}

